---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Every Cure',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Every Cure"
    image={{
      src: 'https://images.unsplash.com/photo-1532187863486-abf9dbad1b69?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Medical Research Image',
    }}
  >
    <Fragment slot="title">
      Unlocking the hidden potential of <br />
      <span class="text-accent dark:text-white highlight">existing drugs to save lives</span>
    </Fragment>

    <Fragment slot="subtitle">
      Every Cure is a nonprofit initiative dedicated to repurposing existing medicines to treat diseases without approved treatments. By harnessing the power of AI and collaborative research, we aim to accelerate the discovery of new treatments and bring hope to millions of patients worldwide.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'Diseases without FDA-approved treatments', amount: '19,000+' },
      { title: 'People affected globally', amount: '300M+' },
      { title: 'Repurposed drugs advanced', amount: '28' },
      { title: 'Lives improved', amount: '30-40K' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Approach"
    subtitle="Every Cure utilizes a systematic, disease-agnostic approach to drug repurposing, leveraging AI and collaborative research to unlock new treatments rapidly."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'AI-Powered Identification',
        description:
          'We use advanced artificial intelligence to analyze the worlds biomedical knowledge and identify FDA-approved drugs that can be repurposed for untreated conditions.',
        icon: 'tabler:brain',
      },
      {
        title: 'Open-Source Database',
        description:
          'Our comprehensive, open-source database integrates diverse datasets to facilitate transparency and collaboration within the scientific community.',
        icon: 'tabler:database',
      },
      {
        title: 'High-Impact Focus',
        description:
          'We prioritize drug repurposing opportunities that can benefit neglected patient communities, ensuring our efforts address the most pressing needs.',
        icon: 'tabler:target',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Rigorous Validation',
        description:
          'Promising opportunities are thoroughly validated through laboratory and clinical studies to confirm their efficacy and safety before advancing to broader applications.',
        icon: 'tabler:test-pipe',
      },
      {
        title: 'Collaborative Research',
        description:
          'We partner with medical experts, physicians, drug companies, academics, and patient advocacy groups to accelerate the drug repurposing process.',
        icon: 'tabler:users',
      },
      {
        title: 'Equitable Access',
        description:
          'We are committed to ensuring that new cures are accessible to all patients, regardless of geographic or economic barriers.',
        icon: 'tabler:world',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Medical Research Team',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="At Every Cure, our values guide our mission to unlock the full potential of existing medicines and save lives."
    items={[
      {
        title: 'Innovation',
        description:
          'We embrace cutting-edge technologies and novel approaches to accelerate drug repurposing and discovery.',
      },
      {
        title: 'Collaboration',
        description:
          'We foster partnerships across disciplines and sectors to leverage collective expertise and resources.',
      },
      {
        title: 'Patient-Centric',
        description:
          'We prioritize the needs of patients, especially those with rare and neglected diseases, in all our efforts.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Achievements"
    subtitle="Every Cure has made significant strides in advancing drug repurposing and improving patient lives."
    isReversed={true}
    callToAction={{
      text: 'Learn More',
      href: '/our-work',
    }}
    items={[
      {
        title: 'AI-Driven Platform Development',
        description: 'Received $48.3M from ARPA-H to develop an AI-driven platform for drug repurposing.',
        icon: 'tabler:robot',
      },
      {
        title: 'Life-Saving Discoveries',
        description:
          'Identified and advanced 28 repurposed drugs for multiple diseases, improving 30-40K lives globally.',
        icon: 'tabler:heartbeat',
      },
      {
        title: 'Collaborative Partnerships',
        description:
          'Established partnerships with leading organizations in healthcare, technology, and philanthropy.',
        icon: 'tabler:heartbeat',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Team"
    tagline="Meet the Experts"
    columns={3}
    items={[
      {
        title: 'Dr. David Fajgenbaum',
        description: 'Co-Founder & President',
      },
      {
        title: 'Dr. Grant Mitchell',
        description: 'Co-Founder & CEO',
      },
      {
        title: 'Tracey Sikora',
        description: 'Co-Founder',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get Involved"
    tagline="Support Our Mission"
    columns={2}
    items={[
      {
        title: 'Donate',
        description:
          'Your contribution helps fund our research and platform development to accelerate drug repurposing.',
        icon: 'tabler:heart',
      },
      {
        title: 'Share Your Insights',
        description:
          'If you have experience with drug repurposing or off-label use, share your story to help advance our research.',
        icon: 'tabler:bulb',
      },
    ]}
  />
</Layout>
