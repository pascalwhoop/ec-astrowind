---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Every Cure Tech Blog',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    tagline="Every Cure Tech Blog"
    actions={[
      {
        variant: 'primary',
        text: 'Read Latest Posts',
        href: '#latest-posts',
      },
    ]}
  >
    <Fragment slot="title">
      Welcome to the <span class="text-accent dark:text-white highlight">Every Cure</span> Tech Blog
    </Fragment>

    <Fragment slot="subtitle">
      Discover insights into our technology, engineering practices, and the technical challenges we're solving to help repurpose existing drugs for new diseases.
    </Fragment>
  </Hero>

  <!-- Features Widget -->
  <Features
    id="features"
    tagline="What we write about"
    title="Topics we cover"
    items={[
      {
        title: 'Drug Repurposing Technology',
        description:
          'Deep dives into our technological approach to identifying new uses for existing drugs.',
        icon: 'tabler:flask',
      },
      {
        title: 'Data Science & ML',
        description:
          'Exploring how we use data science and machine learning to analyze medical data and identify potential treatments.',
        icon: 'tabler:brain',
      },
      {
        title: 'Engineering Practices',
        description:
          'Sharing our engineering best practices, tools, and methodologies that help us build reliable and scalable solutions.',
        icon: 'tabler:code',
      },
      {
        title: 'Technical Challenges',
        description:
          'Discussion of complex technical challenges we face and how we solve them.',
        icon: 'tabler:puzzle',
      },
    ]}
  />

  <!-- Latest Posts Widget -->
  <BlogLatestPosts
    id="latest-posts"
    title="Latest Blog Posts"
    information={`Explore our latest technical articles and insights.`}
  />
</Layout>
